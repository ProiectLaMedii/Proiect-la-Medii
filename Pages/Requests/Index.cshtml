@page
@model DeliveryAplication.Pages.Requests.IndexModel

@{
    ViewData["Title"] = "Requests";
}

<h1>My orders:</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Client)
            </th>
            <th>
                Products
            </th>
            <th>
                Quantities
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].TotalPrice)
            </th>
            <th>
                Delivery Location
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Request)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.FullName)
                </td>
                <td>
                    @foreach (var rp in item.RequestProducts)
                    {
                        @Html.DisplayFor(modelItem => rp.Product.Name)
                        <br />
                    }
                </td>
                <td>
                    @foreach (var rp in item.RequestProducts)
                    {
                        @Html.DisplayFor(modelItem => rp.Quantity)
                        <br />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryLocation.LocationName)
                </td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>