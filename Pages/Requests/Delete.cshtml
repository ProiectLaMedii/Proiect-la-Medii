@page
@model DeliveryAplication.Pages.Requests.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Request.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Request.Client.FullName)
        </dd>
        @for (var i = 0; i < Model.Request.RequestProducts.Count; i++)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Request.RequestProducts[i].Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Request.RequestProducts[i].Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Request.RequestProducts[i].Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Request.RequestProducts[i].Quantity)
            </dd>
        }
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Request.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>